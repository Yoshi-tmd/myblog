<p>
    <strong>タイトル：</strong>
    <%= @post.title %>
</p>

<p>
    <strong>内容：</strong>
    <%= @post.text %>
</p>

<%= form_for( [@post, @post.comments.build] ) do |f| %>
<p>
    <%= f.label :commenter, "コメンター" %><br />
    <%= f.text_field :commenter %>
</p>

<p>
    <%= f.label :body, "コメント" %><br />
    <%= f.text_area :body, cols: 60, rows: 8 %>
</p>

<p>
    <%= f.submit "コメントを投稿" %>
</p>
<% end %>

<%= link_to '戻る', posts_path %>
| <%= link_to '編集', edit_post_path(@post) %>
